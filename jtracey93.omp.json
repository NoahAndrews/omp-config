{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#EB9654",
          "leading_diamond": "\ue0b6",
          "template": "{{ if .SSHSession }}\ueba9 {{ end }}{{ .UserName }} ",
          "properties": {
            "display_host": false
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#3f3f3f",
          "background": "lightYellow",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#ffffff",
          "background": "#25AFF3",
          "template": " ({{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}) ",
          "properties": {
            "fetch_status": true
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "#ffffff",
          "background": "#cc00ff",
          "template": " {{ .CurrentDate | date .Format }} ",
          "properties": {
            "time_format": "15:04:05"
          }
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "#ffffff",
          "background": "#6CA35E",
          "template": " îœ˜ {{ .Full }} "
        },
        {
          "type": "status",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#0095e9",
          "background_templates": [
            "{{ if gt .Code 0 }}#ff0044{{ end }}"
          ],
          "trailing_diamond": "\ue0b0",
          "template": " \uf0e7 ",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "#3f3f3f",
          "background": "#ffff00",
          "leading_diamond": "\ue0b6</>",
          "trailing_diamond": "\ue0b4",
          "template": "\uf252 {{ .FormattedMs }} ",
          "properties": {
            "always_enabled": true,
            "style": "austin"
          }
        }
      ]
    }
  ],
  "shell_integration": true,
  "pwd": "osc99"
}
